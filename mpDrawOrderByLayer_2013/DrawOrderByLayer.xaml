        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical"
                        IsEnabled="{Binding Path=EnableElements}">
            <Button MinWidth="0" Name="BtReverse" Padding="2" Width="30" Height="30"
                        Command="{Binding Path=ReverseListCommand}"
                        ToolTip="{Binding Source={StaticResource Lang}, XPath=h2}">
                <Rectangle Fill="{DynamicResource BlackBrush}" Width="20" Height="20">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill" Visual="{StaticResource AppbarArrowDownUp}"></VisualBrush>
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>
            <Button MinWidth="0" Name="BtSelectAll" Padding="2" Width="30" Height="30"
                        Command="{Binding Path=SelectAllCommand}"
                        ToolTip="{Binding Source={StaticResource Lang}, XPath=h3}">
                <Rectangle Fill="{DynamicResource BlackBrush}" Width="20" Height="18">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill" Visual="{StaticResource AppbarListCheck}"></VisualBrush>
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>
            <Button MinWidth="0" Name="BtDeSelectAll" Padding="2" Width="30" Height="30"
                        Command="{Binding Path=DeSelectAllCommand}"
                        ToolTip="{Binding Source={StaticResource Lang}, XPath=h4}">
                <Rectangle Fill="{DynamicResource BlackBrush}" Width="20" Height="20">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill" Visual="{StaticResource AppbarCheckmarkCross}"></VisualBrush>
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>
            <Button MinWidth="0" Name="BtInverse" Padding="2" Width="30" Height="30"
                        Command="{Binding Path=InverseListCommand}"
                        ToolTip="{Binding Source={StaticResource Lang}, XPath=h5}">
                <Rectangle Fill="{DynamicResource BlackBrush}" Width="18" Height="20">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill" Visual="{StaticResource AppbarRefresh}"></VisualBrush>
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>
        </StackPanel>
        <Border Grid.Row="0" Grid.Column="0" BorderThickness="1"
                    BorderBrush="{DynamicResource AccentColorBrush}" Margin="2" >
            <ListBox Name="LbLayers" HorizontalContentAlignment="Stretch"
                         IsEnabled="{Binding Path=EnableElements}"
                         ItemsSource="{Binding Path=Layers}"
                         dd:DragDrop.IsDragSource="True"
                         dd:DragDrop.IsDropTarget="True"
                         dd:DragDrop.UseDefaultDragAdorner="True">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="local:LayerItem">
                        <CheckBox Content="{Binding Path=Name}"
                                      IsChecked="{Binding Path=Selected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></CheckBox>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
        <CheckBox Grid.Row="1" Margin="2" Grid.Column="0"
                      IsEnabled="{Binding Path=EnableElements}"
                      IsChecked="{Binding Path=AutoMove, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Name="ChkAutoMove" Content="{Binding Source={StaticResource Lang}, XPath=h6}"></CheckBox>
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                  IsEnabled="{Binding Path=EnableElements}"
                  Visibility="{Binding ElementName=ChkAutoMove, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.Resources>
                <DataTemplate x:Key="DtLayers" DataType="local:LayerItem">
                    <TextBlock Text="{Binding Path=Name}"></TextBlock>
                </DataTemplate>
            </Grid.Resources>
            <CheckBox Grid.Column="0" Grid.Row="0" Margin="2" HorizontalAlignment="Left"
                          Content="{Binding Source={StaticResource Lang}, XPath=h7}"
                          IsChecked="{Binding Path=UpLayerWork}"
                          VerticalAlignment="Center" Name="ChkUpLayer"></CheckBox>
            <ComboBox Grid.Column="1" Grid.Row="0" Margin="2" MinWidth="100"
                          IsEnabled="{Binding ElementName=ChkUpLayer, Path=IsChecked}"
                          ItemsSource="{Binding Path=Layers}"
                          SelectedItem="{Binding Path=UpLayerName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          ItemTemplate="{StaticResource DtLayers}"></ComboBox>
            <CheckBox Grid.Column="0" Grid.Row="1" Margin="2" HorizontalAlignment="Left"
                          Content="{Binding Source={StaticResource Lang}, XPath=h8}"
                          IsChecked="{Binding Path=DownLayerWork}"
                          VerticalAlignment="Center" Name="ChkDownLayer"></CheckBox>
            <ComboBox Grid.Column="1" Grid.Row="1" Margin="2" MinWidth="100"
                          IsEnabled="{Binding ElementName=ChkDownLayer, Path=IsChecked}"
                          ItemsSource="{Binding Path=Layers}"
                          SelectedItem="{Binding Path=DownLayerName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          ItemTemplate="{StaticResource DtLayers}"></ComboBox>
        </Grid>
        <Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Margin="2" IsEnabled="{Binding Path=EnableElements}"
                        Command="{Binding Path=AcceptCommand}"
                        MinWidth="100" HorizontalAlignment="Center"
                        Content="{Binding Source={StaticResource Lang}, XPath=h9}"></Button>
            <mah:MetroProgressBar Grid.Row="1" Foreground="{DynamicResource AccentColorBrush}"
                                           Value="{Binding Path=ProgressValue}" Margin="0,2,0,0"
                                           Maximum="{Binding Path=ProgressMaximum}"></mah:MetroProgressBar>
        </Grid>
    </Grid>
</mpc:BaseMetroWindow>

